<Window x:Class="Assignment.StaffLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment"
        mc:Ignorable="d"
        Title="StaffLogin" Height="450" Width="800">
    <Grid>
        <Label Content="Staff ID" HorizontalAlignment="Left" Margin="222,198,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtStaffID" HorizontalAlignment="Left" Margin="325,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" FontSize="16"/>
        <Label Content="Please enter staff card number." HorizontalAlignment="Center" Height="55" Margin="0,59,0,0" VerticalAlignment="Top" Width="570" FontSize="36"/>
        <Button x:Name="btnStaffLogin" Content="Login" HorizontalAlignment="Left" Height="24" Margin="465,0,0,0" VerticalAlignment="Center" Width="85" FontSize="16" Click="btnStaffLogin_Click" />

    </Grid>
</Window>
